{
    {% assign categories = '' | split: '' %}
    articles: [{% assign count = 1 %}
    {% for post in site.posts limit 200 %}{% if post.permalink and post.translations %}{% assign count = count | plus:1 %}
        {
            "permalink": "{{ post.permalink  | jsonify }}",
            "url": "{{ post.original | jsonify }}",
            "domain": "{{ post.domain | jsonify }}",
            "title": {{ post.title | jsonify }},
            "image": "{{ post.image | jsonify }}",
            "date": "{{ post.date }}",
            "category": "{{ post.category  | jsonify }}",
            "languages": [
                 {{ post.translations | jsonify }}
            ]
            {% unless categories contains post.category %}
              {% assign categories = categories | concat: post.category %}
            {% endunless %}
        }{% unless for.last == true %},{% endunless %}{% endif %}
    {% endfor %}
  ],
  categories: {{ categories | jsonify }}
}
